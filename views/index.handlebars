<header class="header">
  <h1>Eat-da-burger!</h1>
</header>

<div class="wishlist">
<h2>Wishlist</h2>
<ul>
  {{#each burgers}}
    {{#unless devour}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="devoured-burger">
<h2>Devoured burger!</h2>
<ul>
  {{#each burgers}}
    {{#if devour}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>
</div>

<div class="form">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <div class="form-group">
    <label for="devour"></label><br>
    <input type="radio" name="devour" value="1" checked> Already 8 that burg!<br>
    <input type="radio" name="devour" value="0"> Get it on the Wishlist!
 </div>

  <button type="submit">Add Burger</button>
</form>
</div>
